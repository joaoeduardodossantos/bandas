<p id="notice"><%= notice %></p>

<h1>Estilos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estilos.each do |estilo| %>
      <tr>
        <td><%= estilo.nome %></td>
        <td><%= link_to 'Show', estilo %></td>
        <td><%= link_to 'Edit', edit_estilo_path(estilo) %></td>
        <td><%= link_to 'Destroy', estilo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estilo', new_estilo_path %>
